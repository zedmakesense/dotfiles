# vim: ft=swayconfig
# set floating mode for generated windows
for_window [title="(?:Open|Save|File) (?:File|Folder|As|Upload)"] floating enable
for_window [title="(?:Open|Save|File) (?:File|Folder|As|Upload)"] resize set 800 600
for_window [title = "About Mozilla Firefox"] floating enable
for_window [window_role = "About"] floating enable
for_window [app_id="firefox" title="Library"] floating enable, border pixel 1
for_window [title="Revert Bookmarks"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_role = "dialog"] floating enable
for_window [window_type = "dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [app_id = "floating"] floating enable
for_window [app_id = "floating_update"] floating enable, resize set width 1000px height 600px
for_window [class = "(?i)pinentry"] floating enable
for_window [title = "Administrator privileges required"] floating enable
for_window [title="Confirm File Replacing"] floating enable

# set floating mode for specific applications
for_window [app_id="htop"] floating enable, resize set 1366 ppt 768 ppt
for_window [app_id="nvtop"] floating enable, resize set 1366 ppt 768 ppt
for_window [app_id="foot" title="float"] floating enable
for_window [app_id="org.gnome.FileRoller"] floating enable
for_window [app_id="kvantummanager"] floating enable
for_window [app_id="qalculate-gtk"] floating enable
for_window [app_id="lxqt-policykit-agent"] floating enable
for_window [app_id="nm-connection-editor"] floating enable
for_window [app_id="org.qbittorrent.qBittorrent" title="^(?!qBittorrent).*$"] floating enable
for_window [app_id="com.github.persepolisdm.persepolis" title="^(?!Persepolis Download Manager$).*"] floating enable, resize set 800 600
for_window [class="net-runelite-client-RuneLite"] floating enable
