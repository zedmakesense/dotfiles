# vim: ft=swayconfig
exec sway-audio-idle-inhibit
exec swayidle -w \
    timeout 300 'swaylock --ignore-empty-password --show-failed-attempts -f -c 000000' \
    timeout 310 'swaymsg "output * power off"' \
    resume 'swaymsg "output * power on"' \
    before-sleep 'swaylock --ignore-empty-password --show-failed-attempts -fFec 282828'

