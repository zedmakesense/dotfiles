set $term foot
set $menu fuzzel --placeholder "Search ..."
set $browser firefox
set $fileBrowser pcmanfm
set $calc calc.sh
set $emoji rofimoji

set $paste cliphist.sh

set $SS grim - | wl-copy && notify-send "Screenshot" "Full screen screenshot copied to clipboard"
set $SSselect grim -g "$(slurp)" - | wl-copy && notify-send "Screenshot" "Region screenshot copied to clipboard"
set $SSedit grim -g "$(slurp -o -r -c '#ff0000ff')" -t ppm - | satty --filename - --fullscreen --output-filename ~/Pictures/Screenshots/$(date +'%Y-%m-%d-%H%M%S').png

set $htop '$term -a htop htop'
set $nvtop '$term -a nvtop nvtop'
set $color hyprpicker | wl-copy
set $wiki '$term --title="float" -e nvim +VimwikiIndex'
set $diary '$term --title="float" -e nvim +VimwikiMakeDiaryNote'
set $news '$term --title="float" -e newsraft'

bindsym $mod+Return exec $term
bindsym $mod+space exec $menu
bindsym $mod+e exec $fileBrowser

bindsym $mod+Shift+Return exec $browser
bindsym $mod+Shift+v exec $wiki
bindsym $mod+Shift+d exec $diary
bindsym $mod+Shift+n exec $news

bindsym $mod+p exec $paste
bindsym $mod+c exec $calc
bindsym $mod+m exec $emoji

bindsym Ctrl+Escape exec $nvtop
bindsym Ctrl+Shift+Escape exec $htop

bindsym $mod+n exec swaync-client -t -sw
bindsym Ctrl+Delete exec swaync-client --hide-latest

bindsym Print exec $SS
bindsym Ctrl+Print exec $SSselect
bindsym Ctrl+Shift+Print exec $SSedit
bindsym Ctrl+Shift+p exec $color
