bindsym $mod+Shift+s exec $SSedit
bindsym $mod+p exec $color

mode "systemctl" {
    bindsym r exec systemctl reboot; mode default
    bindsym p exec systemctl poweroff; mode default
    bindsym e exec sway exit; mode default
    bindsym l exec swaylock --ignore-empty-password --show-failed-attempts -fFec 282828; mode default
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+bracketleft mode "default"
}
bindsym $mod+Shift+o mode "systemctl"
bindsym --locked XF86AudioMute exec sh -c 'wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle; volume.sh'
bindsym --locked XF86AudioLowerVolume exec sh -c 'wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 5%-; volume.sh'
bindsym --locked XF86AudioRaiseVolume exec sh -c 'wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 5%+; volume.sh'
bindsym --locked XF86AudioMicMute exec sh -c 'wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle; volume.sh'

bindsym --locked XF86MonBrightnessDown exec sh -c 'brightnessctl set 5%-; brightness.sh'
bindsym --locked XF86MonBrightnessUp exec sh -c 'brightnessctl set 5%+; brightness.sh'

bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioPause exec playerctl play-pause
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked XF86AudioPrev exec playerctl previous
bindsym --locked XF86AudioStop exec playerctl stop

