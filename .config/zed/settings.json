{
  "disable_ai": true,
  "calls": {
    "mute_on_join": true,
  },
  "window_decorations": "server",
  "title_bar": {
    "show_user_picture": false,
    "show_sign_in": false,
    "show_onboarding_banner": false,
  },
  "search": {
    "regex": true,
  },
  "use_smartcase_search": true,
  // "diagnostics": {
  //   "inline": {
  //     "enabled": true,
  //   },
  // },
  // "prettier": {
  //   "allowed": true,
  // },
  "middle_click_paste": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "ui_font_family": "IosevkaTerm Nerd Font",
  "theme": "Gruvbox Dark",
  // "icon_theme": "Zed (Default)",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_font_family": "IosevkaTerm Nerd Font",

  "vertical_scroll_margin": 10,
  "cursor_blink": false,
  "relative_line_numbers": "enabled",
  "tab_size": 2,
  "base_keymap": "Emacs",

  "vim_mode": true,
  "vim": {
    "gdefault": true,
    "use_smartcase_find": true,
    "use_system_clipboard": "on_yank",
    "highlight_on_yank_duration": 150,
  },

  "tab_bar": {
    "show": false,
  },
  "tabs": {
    "show_diagnostics": "errors",
  },
  "scrollbar": {
    "show": "never",
  },

  "toolbar": {
    // "code_actions": true,
    "breadcrumbs": false,
    "quick_actions": true,
  },

  "git_panel": {
    "dock": "right",
  },

  "project_panel": {
    "button": true,
    "dock": "right",
    // "git_status": true,
  },
  "outline_panel": {
    "dock": "right",
  },
  "collaboration_panel": {
    "dock": "left",
  },
  "notification_panel": {
    "dock": "left",
  },

  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"],
  },

  // "indent_guides": {
  //   "enabled": true,
  //   "coloring": "indent_aware",
  // },

  "terminal": {
    "button": false,
    "font_family": "IosevkaTerm Nerd Font",
    "env": {
      "EDITOR": "zed --wait",
    },
  },

  // "inlay_hints": {
  //   "enabled": true,
  // },

  "lsp": {
    "snippet-completion-server": {
      "settings": {
        "feature_paths": true,
      },
    },
  },

  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "Python": {
      "tab_size": 4,
      "format_on_save": "on",
      "formatter": {
        "language_server": {
          "name": "ruff",
        },
      },
      "language_servers": ["ruff"],
    },
    "Go": {
      "formatter": {
        "external": {
          "command": "goimports",
        },
      },
      "format_on_save": "on",
    },
    "jdtls": {
      "settings": {
        // "java_home": "/path/to/your/JDK21+",
        "jdk_auto_download": true,
        "check_updates": "always",
        // "java_debug_jar": "/path/to/your/com.microsoft.java.debug.plugin.jar",
      },
    },
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },

  "session": {
    "trust_all_worktrees": true,
  },

  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "java": true,
  },
}
